<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/face_fragment"
        android:name="com.example.eyespeak.FaceTrackFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark" />

    <LinearLayout
        android:id="@+id/controller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="70dp"
        android:orientation="vertical"
        android:weightSum="5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="Select something below to speak."
            android:textColor="@color/textColor"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/controller"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/categoryColor"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">

            <com.example.eyespeak.CategoryButton
                android:id="@+id/basic_needs"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/radio_button_background"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:text="Basic Needs"
                android:textColor="@color/category_button_text_colors"
                android:textSize="20sp" />

            <com.example.eyespeak.CategoryButton
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/radio_button_background"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:text="Personal Care"
                android:textColor="@color/category_button_text_colors"
                android:textSize="20sp" />

            <com.example.eyespeak.CategoryButton
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/radio_button_background"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:text="Salutations"
                android:textColor="@color/category_button_text_colors"
                android:textSize="20sp" />

            <com.example.eyespeak.CategoryButton
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/radio_button_background"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:text="Yes | No"
                android:textColor="@color/category_button_text_colors"
                android:textSize="20sp" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <com.example.eyespeak.EyeSpeakButton
                style="@style/SpeechButton"
                android:layout_width="0dp"
                android:layout_height="128dp"
                android:layout_margin="10dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_default_background"
                android:gravity="center"
                android:text="I want the door closed."
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.example.eyespeak.EyeSpeakButton
                style="@style/SpeechButton"
                android:layout_width="0dp"
                android:layout_height="128dp"
                android:layout_margin="10dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_default_background"
                android:gravity="center"
                android:text="I want the door open."
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.example.eyespeak.EyeSpeakButton
                style="@style/SpeechButton"
                android:layout_width="0dp"
                android:layout_height="128dp"
                android:layout_margin="10dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_default_background"
                android:gravity="center"
                android:text="I would like to go to the bathroom."
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <com.example.eyespeak.EyeSpeakButton
                style="@style/SpeechButton"
                android:layout_width="0dp"
                android:layout_height="128dp"
                android:layout_margin="10dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_default_background"
                android:gravity="center"
                android:text="I want the lights off."
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.example.eyespeak.EyeSpeakButton
                style="@style/SpeechButton"
                android:layout_width="0dp"
                android:layout_height="128dp"
                android:layout_margin="10dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_default_background"
                android:gravity="center"
                android:text="I want the lights on."
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.example.eyespeak.EyeSpeakButton
                style="@style/SpeechButton"
                android:layout_width="0dp"
                android:layout_height="128dp"
                android:layout_margin="10dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_default_background"
                android:gravity="center"
                android:text="I want my pillow fixed."
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <com.example.eyespeak.EyeSpeakButton
                style="@style/SpeechButton"
                android:layout_width="0dp"
                android:layout_height="128dp"
                android:layout_margin="10dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_default_background"
                android:gravity="center"
                android:text="I would like some water."
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.example.eyespeak.EyeSpeakButton
                style="@style/SpeechButton"
                android:layout_width="0dp"
                android:layout_height="128dp"
                android:layout_margin="10dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_default_background"
                android:gravity="center"
                android:text="I would like some coffee."
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.example.eyespeak.EyeSpeakButton
                style="@style/SpeechButton"
                android:layout_width="0dp"
                android:layout_height="128dp"
                android:layout_margin="10dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_default_background"
                android:gravity="center"
                android:text="I want another pillow."
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
    </LinearLayout>


    <com.example.eyespeak.PointerView
        android:id="@+id/pointer_view"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/pointer_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>