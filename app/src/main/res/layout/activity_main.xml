<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/face_fragment"
        android:name="com.example.eyespeak.FaceTrackFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark" />

    <com.example.eyespeak.PauseButton
        android:id="@+id/pause_button"
        style="@style/PauseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.eyespeak.SettingsButton
        android:id="@+id/settings_button"
        style="@style/SettingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/controller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="70dp"
        android:orientation="vertical"
        android:weightSum="5">

        <TextView
            style="@style/SpokenTextView"
            android:layout_width="match_parent"
            android:text="@string/select_something"
            app:layout_constraintBottom_toTopOf="@id/controller"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/category_group_background"
            android:checkedButton="@id/basic_needs"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">

            <com.example.eyespeak.CategoryButton
                android:id="@+id/basic_needs"
                style="@style/CategoryTheme"
                android:text="@string/basic_needs" />

            <com.example.eyespeak.CategoryButton
                style="@style/CategoryTheme"
                android:text="@string/personal_care" />

            <com.example.eyespeak.CategoryButton
                style="@style/CategoryTheme"
                android:text="@string/salutations" />

            <com.example.eyespeak.CategoryButton
                style="@style/CategoryTheme"
                android:text="@string/yes_no" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <com.example.eyespeak.EyeSpeakButton
                style="@style/SpeechButton"
                android:text="@string/door_closed"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.example.eyespeak.EyeSpeakButton
                style="@style/SpeechButton"
                android:text="@string/door_open"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.example.eyespeak.EyeSpeakButton
                style="@style/SpeechButton"
                android:text="@string/bathroom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <com.example.eyespeak.EyeSpeakButton
                style="@style/SpeechButton"
                android:text="@string/lights_off"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.example.eyespeak.EyeSpeakButton
                style="@style/SpeechButton"
                android:text="@string/lights_on"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.example.eyespeak.EyeSpeakButton
                style="@style/SpeechButton"
                android:text="@string/pillow_fixed"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <com.example.eyespeak.EyeSpeakButton
                style="@style/SpeechButton"
                android:text="@string/water"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.example.eyespeak.EyeSpeakButton
                style="@style/SpeechButton"
                android:text="@string/coffee"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.example.eyespeak.EyeSpeakButton
                style="@style/SpeechButton"
                android:text="@string/another_pillow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
    </LinearLayout>

    <com.example.eyespeak.PointerView
        android:id="@+id/pointer_view"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/pointer_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>