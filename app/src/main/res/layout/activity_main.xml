<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/face_fragment"
        android:name="com.willowtree.vocable.facetracking.FaceTrackFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark" />

    <com.willowtree.vocable.customviews.PauseButton
        android:id="@+id/pause_button"
        style="@style/PauseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.willowtree.vocable.customviews.SettingsButton
        android:id="@+id/settings_button"
        style="@style/SettingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/current_text"
        style="@style/SpokenTextView"
        android:layout_width="match_parent"
        android:text="@string/select_something"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_button" />

    <RadioGroup
        android:id="@+id/category_view"
        style="@style/CategoryRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/main_activity_side_margin"
        android:layout_marginEnd="@dimen/main_activity_side_margin"
        app:layout_constraintTop_toBottomOf="@+id/current_text">

        <com.willowtree.vocable.customviews.CategoryButton
            android:id="@+id/basic_needs"
            style="@style/CategoryTheme"
            android:text="@string/basic_needs" />

        <com.willowtree.vocable.customviews.CategoryButton
            style="@style/CategoryTheme"
            android:text="@string/personal_care" />

        <com.willowtree.vocable.customviews.CategoryButton
            style="@style/CategoryTheme"
            android:text="@string/salutations" />

        <com.willowtree.vocable.customviews.CategoryButton
            style="@style/CategoryTheme"
            android:text="@string/yes_no" />
    </RadioGroup>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/main_activity_side_margin"
        android:layout_marginTop="@dimen/main_activity_category_margin"
        android:layout_marginEnd="@dimen/main_activity_side_margin"
        android:layout_marginBottom="@dimen/main_activity_bottom_margin"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_view">

        <com.willowtree.vocable.customviews.VocableButton
            style="@style/SpeechButton"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="@dimen/speech_button_margin"
            android:layout_marginBottom="@dimen/speech_button_margin"
            android:text="@string/door_closed" />

        <com.willowtree.vocable.customviews.VocableButton
            style="@style/SpeechButton"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="@dimen/speech_button_margin"
            android:layout_marginBottom="@dimen/speech_button_margin"
            android:text="@string/door_open" />

        <com.willowtree.vocable.customviews.VocableButton
            style="@style/SpeechButton"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginBottom="@dimen/speech_button_margin"
            android:text="@string/bathroom" />

        <com.willowtree.vocable.customviews.VocableButton
            style="@style/SpeechButton"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="@dimen/speech_button_margin"
            android:layout_marginBottom="@dimen/speech_button_margin"
            android:text="@string/lights_off" />

        <com.willowtree.vocable.customviews.VocableButton
            style="@style/SpeechButton"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="@dimen/speech_button_margin"
            android:layout_marginBottom="@dimen/speech_button_margin"
            android:text="@string/lights_on" />

        <com.willowtree.vocable.customviews.VocableButton
            style="@style/SpeechButton"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginBottom="@dimen/speech_button_margin"
            android:text="@string/pillow_fixed" />

        <com.willowtree.vocable.customviews.VocableButton
            style="@style/SpeechButton"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="@dimen/speech_button_margin"
            android:text="@string/water" />

        <com.willowtree.vocable.customviews.VocableButton
            style="@style/SpeechButton"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="@dimen/speech_button_margin"
            android:text="@string/coffee" />

        <com.willowtree.vocable.customviews.VocableButton
            style="@style/SpeechButton"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/another_pillow" />

    </GridLayout>

    <com.willowtree.vocable.customviews.PointerView
        android:id="@+id/pointer_view"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/pointer_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/error_view"
        layout="@layout/error_layout"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>