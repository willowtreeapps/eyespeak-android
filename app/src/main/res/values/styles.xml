<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="VocableButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/vocable_button_text_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SpeechButton" parent="VocableButton">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CategoryTheme" parent="VocableButton">
        <item name="android:background">@color/categoryColor</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
