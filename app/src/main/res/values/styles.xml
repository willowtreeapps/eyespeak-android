<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="VocableButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/vocable_button_text_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SpeechButton" parent="VocableButton">
        <item name="android:textSize">@dimen/speech_button_text_size</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/button_default_background</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CategoryTheme" parent="VocableButton">
        <item name="android:background">@drawable/radio_button_background</item>
        <item name="android:textSize">@dimen/category_button_text_size</item>
        <item name="android:textColor">@color/category_button_text_colors</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/category_button_height</item>
        <item name="android:layout_margin">@dimen/category_button_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="PauseButton">
        <item name="android:layout_marginStart">@dimen/pause_button_margin</item>
        <item name="android:layout_marginTop">@dimen/pause_button_margin</item>
        <item name="android:drawableStart">@drawable/ic_pause</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/pause_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@android:color/transparent</item>

    </style>

    <style name="SettingsButton">
        <item name="android:layout_marginTop">@dimen/settings_button_margin</item>
        <item name="android:layout_marginStart">@dimen/settings_button_margin</item>
        <item name="android:layout_marginEnd">@dimen/settings_button_margin</item>
        <item name="android:drawableStart">@drawable/ic_settings_light_48dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SpokenTextView">
        <item name="android:layout_height">@dimen/spoken_text_view_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/spoken_text_view_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="CategoryRadioGroup">
        <item name="android:layout_marginStart">@dimen/category_group_margin</item>
        <item name="android:layout_marginEnd">@dimen/category_group_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/category_group_background</item>
        <item name="android:gravity">center</item>
        <item name="android:checkedButton">@id/basic_needs</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">@dimen/category_group_weight_sum</item>
    </style>

    <style name="SpeechButtonLinearLayout">
        <item name="android:layout_weight">1</item>
        <item name="android:weightSum">3</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="CloseButton">
        <item name="android:layout_marginTop">@dimen/close_button_margin</item>
        <item name="android:layout_marginEnd">@dimen/close_button_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/close_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:drawableEnd">@drawable/ic_close</item>
    </style>

    <style name="SettingsTitle">
        <item name="android:layout_marginBottom">@dimen/settings_title_margin_bottom</item>
        <item name="android:textSize">@dimen/settings_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/selectedColor</item>
    </style>

    <style name="ActionButton">
        <item name="android:layout_width">@dimen/action_button_width</item>
        <item name="android:layout_height">@dimen/action_button_height</item>
        <item name="android:layout_marginStart">@dimen/action_button_margin</item>
        <item name="android:layout_marginEnd">@dimen/action_button_margin</item>
        <item name="android:layout_marginBottom">@dimen/action_button_margin_bottom</item>
        <item name="android:background">@drawable/button_default_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/action_button_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="VersionTextView">
        <item name="android:textSize">@dimen/version_text_size</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="TopBarButton">
        <item name="android:layout_width">@dimen/top_bar_button_width</item>
        <item name="android:layout_height">@dimen/top_bar_button_height</item>
        <item name="android:background">@drawable/button_default_background</item>
        <item name="android:paddingEnd">@dimen/top_bar_button_padding</item>
        <item name="android:paddingStart">@dimen/top_bar_button_padding</item>
    </style>
</resources>
